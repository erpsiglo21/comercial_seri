<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_upload_xml" model="ir.ui.view">
        <field name="name">Subir XML de OC</field>
        <field name="model">sale.upload.xml</field>
        <field name="arch" type="xml">
            <form string="Subir XML de orden de compra">
                <group>
                    <field name="xml_file" filename="filename" required="True"/>
                    <field name="filename" invisible="True"/>
                </group>
                <footer>
                    <button string="Confirm" name="confirm" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>    
    <record id="action_sale_upload_xml" model="ir.actions.act_window">
        <field name="name">Subir XML de OC</field>
        <field name="res_model">sale.upload.xml</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_upload_xml"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_sale_upload_xml"
              action="action_sale_upload_xml"
              parent="sale.sale_order_menu"
              sequence="10"
              groups="sales_team.group_sale_salesman"/>
    <record id="message_wizard_form" model="ir.ui.view">
        <field name="name">message.wizard.form</field>
        <field name="model">message.wizard</field>
        <field name="arch" type="xml">
            <form >
                <p class="text-center">
                    <field name="message"/>
                </p>
                <footer>
                    <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/> 
                </footer>
            </form>
        </field>
    </record>              
</odoo>
